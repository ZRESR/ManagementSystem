
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>RandomGroupList</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="@Url.Content("~/Content/GroupList.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        if ((/iphone|ipod|ipad.*os 5/gi).test(navigator.appVersion)) {
            window.onpageshow = function (event) {
                if (event.persisted) {
                    window.location.reload()
                }
            };
        }
        else {
            onload = function () {
                var refreshedId = document.getElementById("refreshed");
                if (refreshedId.value == "no") {
                    refreshedId.value = "yes";
                } else {
                    refreshedId.value = "no";
                    location.reload();
                }
            }
        }

        $(document).ready(function () {
            $(window).bind("unload", function () { });
            var topic = window.localStorage.getItem("topic");
            if (topic != null) {
                $("#btntopic").remove();
                $("#btnleader").hide();
                $(".middlegreyword").hide();
                $(".btnquit").show();
                $("#topicBox").append("<p style='margin:auto; width:80%; text-align:center;'>" + topic + "</p>");
            }
            $.ajax({
                type: 'GET',
                url: "/api/Seminar/" + window.localStorage.getItem("seminarid") + "/Group",
                contentType: "application/json; charset=utf-8",
                data: {
                    "include": 123
                },
                success: function (data, status) {
                    var col = "<div class='block'><div class='panel-body'> <div class='column1'><img src='../images/user.png'/></div><div class='column2'>" + data.Data.leader.name
                        + "<br />" + data.Data.leader.number+"</div></div></div>";
                    $("#list").append(col);
                    for (var i in data.Data.members) {
                        var col = "<div class='block'><div class='panel-body'> <div class='column1'><img src='../images/user.png'/></div><div class='column2'>" + data.Data.members[i].name
                            + "<br />" + data.Data.members[i].number + "</div></div></div>";
                        $("#list").append(col);
                    }
                    $(".seminarblackword").text(data.Data.topics.name + "-" + "随机分组");
                }
            });
            $("#btnleader").click(function () {
                $(".btnquit").show();
                $("#btnleader").hide();
                $(".middlegreyword").hide();
                $(".column3").show();
                $("#btntopic").show();
            });
            $(".btnquit").click(function () {
                $(".btnquit").hide();
                $("#btnleader").show();
                $(".middlegreyword").show();
                $(".column3").hide();
                $("#btntopic").hide();
            });
            $("#btntopic").click(function () {
                $(window).attr("location", '/Student/RandomGroupChooseTopicUI');
            });
        });
    </script>
</head>
<body class="fullbackground">
    <div class="columndisplay">
        <img class="UsersIcon" src="~/images/users.png" />
        <label class="seminarblackword"></label>
    </div>

    <div class="whiteword">
        <div class="panel-body">
            <div class="column4">分组信息：</div>
            <div class="column3"><button class="btnquit" style="display:none;">辞职</button></div>
        </div>
    </div>

    <div id="list"></div>

    <div class="whiteword">
        <div id="topicBox" class="panel-body">
            <div>选题：</div>
        </div>
    </div>
    <div class="middlediv">
        <button id="btnleader" class="btnleader">成为队长</button>
        <button id="btntopic" class="btnleader">选题</button>
        <p class="middlegreyword">您的队伍还没有队长，您可以选择成为队长。</p>
    </div>
    <input type="hidden" id="refreshed" value="no" />
</body>
</html>

