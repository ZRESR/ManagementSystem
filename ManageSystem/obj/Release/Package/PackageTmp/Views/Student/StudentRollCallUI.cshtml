
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
                                   height=device-height,
                                   target-densitydpi=device-dpi,
                                   initial-scale=1.0,
                                   maximum-scale=1.0,
                                   user-scalable=no">
    <title>StudentRollCallUI</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="@Url.Content("~/Content/StudentRollCallUI.css")" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            $(".blueBigBtn").click(function () {
                $(".blueBigBtn").hide();
                $(".successCall").show();
            });
        });
    </script>
</head>
<body>
    <!--设置左上角的blueBoardIcon-->
    <div class="blueUsersDiv">
        <img src="~/images/blueboard.png" class='blueUsersIcon' />
        <strong>讨论课信息</strong>
    </div>

    <!--细线，hr不好设置css，用一个高度很小的div来代替-->
    <div class="hrDiv">
    </div>

    <!--课堂信息，由一个icon和一行文字组成-->
    <div class="courseInfoDiv">
        <img src="~/images/teacher.png" class='courseInfoIcon' />
        <strong>邱明</strong>
    </div>
    <div class="courseInfoDiv">
        <img src="~/images/letter.png" class='courseInfoIcon' />
        <strong>mingqiu@gmail.com</strong>
    </div>
    <div class="courseInfoDiv">
        <img src="~/images/calendar.png" class='courseInfoIcon' />
        <strong>2017-11-11</strong>
    </div>
    <div class="courseInfoDiv">
        <img src="~/images/calendar.png" class='courseInfoIcon' />
        <strong>海韵教学楼201</strong>
    </div>


    <div class="successCall">
          <img src="~/images/clock.png" class='courseInfoIcon'/>
          <strong>签到成功</strong>
     </div>
    <div class="lateCall">
          <img src="~/images/clock.png" class='courseInfoIcon'/>
          <strong>迟到签到成功</strong>
     </div>
    <!--签到按钮-->
    <div>
        <button type="button" class="blueBigBtn">
            签到
        </button>
    </div>


</body>
</html>
