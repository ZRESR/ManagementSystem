
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>CourseInfoUI</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="@Url.Content("~/Content/CourseInfoUI.css")" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: "/api/Course/"+window.localStorage.getItem("courseid"),
                contentType: "application/json; charset=utf-8",
                success: function (data, status) {
                    $(".title").text(data.Data.name)
                    $("#teacher").text("老师："+data.Data.teacher);
                    $("#email").text("邮箱："+data.Data.teacherEmail);
                    $("#description").text("简介：" + data.Data.description);
                }
            });
        });
    </script>
</head>
<body class="body">
    <div class="topBox">
        <span class="title"></span>
    </div>
    <div style="margin-top: 18%">
        <img src="~/images/headimg.png" class="UserImg" />
        <p id="teacher" class="NameText"></p>
    </div>
    <div>
        <img src="~/images/letter.png" class="MailImg" />
        <p id="email" class="MailText"></p>
    </div>
    <div>
        <img src="~/images/file.png" class="PaperImg" />
        <span id="description" class="IntroText"></span>
    </div>
</body>
</html>

