@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
                                   height=device-height,
                                   target-densitydpi=device-dpi,
                                   initial-scale=1.0,
                                   maximum-scale=1.0,
                                   user-scalable=no">
    <title>TeacherBindingUI</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="@Url.Content("~/Content/TeacherBindingUI.css")" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            $(".inputSchool").val(window.localStorage.getItem("school"));
            $("button").click(function () {
                window.localStorage.removeItem("school")
                $(window).attr("location", '/Teacher/TeacherMainUI');
            });
            $(".selectSchoolIcon").click(function () {
                var sid = $(".inputStudentID").text();
                var name = $(".inputName").text();
                var state = {
                    'sid': sid,
                    'name': name
                };
                var url = 'StudentBindingUI';
                window.history.pushState(state, 'Hello', url);
                $(window).attr("location", '/Home/ChooseSchool');
            });
        });
    </script>
</head>
<body class="body">
    <div class="topBoardView">
        <img src="~/images/bg.png" class="topIcon" />
        <img src="~/images/light.png" class="topLight" />
        <div class="topLine"></div>
        <p class="topTips">请先绑定您的账号</p>
    </div>
    <div class="mainView">
        <a class="teacherID">教工号：</a>
        <input class="inputTeacherID" />
        <img src="~/images/warn.png" class="tipIcon" />
        <a class="tipFont">提交后不能修改</a>
        <a class="name">姓名：</a>
        <input class="inputName" />
        <a class="school">学校：</a>
        <input class="inputSchool"/>
        <img src="~/images/home.png" class="selectSchoolIcon"></img>
        <button type="button" class="confirmButton">绑定</button>
    </div>
</body>
</html>
