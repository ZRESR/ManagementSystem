
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
                                   height=device-height,
                                   target-densitydpi=device-dpi,
                                   initial-scale=1.0,
                                   maximum-scale=1.0,
                                   user-scalable=no">
    <title>FixedRollStartCallUI</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="@Url.Content("~/Content/FixedRollStartCallUI.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#start").click(function () {
                if ($("#start").text() != "结束签到") {
                    $("#start").css("background-color", "#FA8888");
                    $("#start").text("结束签到")
                }
                else {
                    $("#start").remove();
                    $(".noGroup").remove();
                    $("#checkStudent").toggleClass("blueBigBtn");
                    $("#checkGroup").css("background-color", "#66ccff").removeAttr("disabled");
                    $("#stuNum").toggleClass("studentNum");
                    $("#usersIcon").toggleClass("usersIcon");
                }
            });
        });
    </script>
</head>
<body>
    <!--设置左上角的蓝色板-->
    <div class="blueBoardDiv">
        <img src="~/images/blueboard.png" class='blueBoardIcon' />
    </div>

    <!--班级1 的字样-->
    <div class='classNameDiv'>
        班级1
    </div>

    <!--学生总数：40 的字样-->
    <div class='studentSumDiv'>
        学生总数: 40
    </div>

    <!--细线，hr不好设置css，用一个高度很小的div来代替-->
    <div class="hrDiv">
    </div>

    <!--已签到的学生以及那个icon,当签到开始及结束时，这个
    部分在中央。当签到开始后结束前，这部分在左边，见.studentNum2。-->
    <!--
       <div class="studentNum">
        <img src="users.png" class="usersIcon"/>
        已签到学生: 0/40
      </div>
    -->
    <!--已签到的学生+icon+签到名单，表示当签到开始后结束前的样子-->
    <div id="stuNum" class="studentNum2">
        <img id="usersIcon" src="~/images/users.png" class="usersIcon2" />
        <span>已签到学生: 0/40</span>
    </div>
    <button id="checkStudent" type="button" class="blueSmallBtn" onclick="javascript: window.location = '/Teacher/RollCallListUI'">
               签到名单
    </button>


    <!--下面是button，分为BigBtn和SmallBnt,只有正在签到时
    的 签到名单按钮 是SmallBnt。 当使用greyBigBtn的时候要加
    上提示语。-->
    <div>
        <button id="start" pe="button" class="blueBigBtn">
            开始签到
        </button>
    </div>

    <div>
        <button id="checkGroup" type="button" class="greyBigBtn" onclick="javascript: window.location = '/Teacher/RandomGroupInfoUI'">
            查看分组
        </button>
        <text class="noGroup">
            随机分组还未开始，不能查看分组
        </text>
    </div>


</body>
</html>


