@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
                                   height=device-height,
                                   target-densitydpi=device-dpi,
                                   initial-scale=1.0,
                                   maximum-scale=1.0,
                                   user-scalable=no">
    <title>RegisterUI</title>
    <script type="text/javascript" src="~/Scripts/jquery-1.11.3.min.js"></script>
    <link href="@Url.Content("~/Content/RegisterUI.css")" rel="stylesheet" type="text/css" />
    <script>
        $(document).ready(function () {
            $(".confirmButton").click(function () {
                $(window).attr("location", '/Home/ChooseCharacter');
            });
        });
    </script>
</head>
<body class="body">
    <div class="topBoardView">
        <img src="~/images/bg.png" class="topIcon" />
        <p class="topTips">
            <img src="~/images/light.png" class="topLight" />
            注册
        </p>
    </div>
    <div class="mainView">
        <form class="formInput">
            <label class="phoneID">手&nbsp;&nbsp;机&nbsp;&nbsp;号：</label>
            <input type="text" class="inputPhoneID" />
            <label class="password">密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码：</label>
            <input type="password" class="inputPassword" />
            <label class="password">确认密码：</label>
            <input type="password" class="inputPassword" />
            <input type="submit" class="confirmButton" value="注册" />
        </form>   
    </div>
</body>
</html>
